#Database details
database:
  dsn: mysql://root:@localhost/cms_silk
  pdo_dsn: mysql:host=localhost;dbname=cms_silk
  username: root
  password: 
  prefix: cms_

#Should we be in debug mode?
debug: false

#Places to look for classes when autoloading
#(app/models will be autoloaded later on)
class_autoload:
  - lib/cmsms/classes

smarty_plugins:
  - lib/cmsms/plugins

auto_migrate:
  \cmsms\auth\Group : lib/cmsms/classes/auth/class.group.php
  \cmsms\auth\User : lib/cmsms/classes/auth/class.user.php

